<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home Loan Calculator</title>
    <link href="(link unavailable)" rel="stylesheet" />
    <script src="(link unavailable)"></script>
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #74ebd5, #acb6e5);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
      }

      .container {
        background-color: white;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        width: 100%;
        max-width: 500px;
        animation: fadeIn 1s ease-in-out;
      }

      h1 {
        font-size: 2.5rem;
        text-align: center;
        color: #444;
        margin-bottom: 30px;
      }

      .form-group label {
        font-size: 16px;
        margin-bottom: 8px;
        color: #555;
      }

      .form-group input,
      .form-group select {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: 1px solid #ddd;
        font-size: 16px;
        transition: all 0.3s ease;
      }

      .form-group input:focus,
      .form-group select:focus {
        border-color: #74ebd5;
        box-shadow: 0 0 8px rgba(116, 235, 213, 0.5);
        outline: none;
      }

      button {
        width: 100%;
        padding: 14px;
        background-color: #28a745;
        color: white;
        border: none;
        font-size: 18px;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      button:hover {
        background-color: #218838;
      }

      h2 {
        text-align: center;
        margin-top: 20px;
        font-size: 1.5rem;
        color: #007bff;
        background-color: #f0f8ff;
        padding: 10px;
        border-radius: 8px;
        animation: popIn 0.5s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes popIn {
        from {
          opacity: 0;
          transform: scale(0.8);
        }
        to {
          opacity: 1;
          transform: scale(1);
        }
      }
    </style>
  </head>

  <body>
    <div class="container">
      <h1>Home Loan Calculator</h1>
      <form action="/homeloan" method="post">
        <!-- Bank Selection -->
        <div class="form-group">
          <label for="bank">Select Bank:</label>
          <select id="bank" name="bank" class="form-control" required>
            <option value="">Select Bank</option>
            <option value="bank1">HDFC Bank</option>
            <option value="bank2">SBI (State Bank of India)</option>
            <option value="bank3">ICICI Bank</option>
            <option value="bank4">Axis Bank</option>
            <option value="bank5">Bank of Baroda</option>
            <option value="bank6">Punjab National Bank (PNB)</option>
            <option value="bank7">Kotak Mahindra Bank</option>
            <option value="bank8">Bajaj Finserv</option>
            <option value="bank9">IDFC FIRST Bank</option>
            <option value="bank10">Yes Bank</option>
          </select>
        </div>

        <!-- Loan Amount Input -->
        <div class="form-group">
          <label for="principal">Loan Amount (₹):</label>
          <input
            type="number"
            name="principal"
            id="principal"
            required
            placeholder="Enter loan amount"
            min="0"
          />
        </div>

        <!-- Rate of Interest Input (Dynamic based on Bank Selection) -->
        <div class="form-group">
          <label for="rate">Rate of Interest annual (%):</label>
          <input
            type="number"
            name="rate"
            id="rate"
            required
            placeholder="Rate will be auto-filled"
            min="0"
            readonly
          />
        </div>

        <!-- Tenure Input -->
        <div class="form-group">
          <label for="tenure">Tenure (in year):</label>
          <input
            type="number"
            name="tenure"
            id="tenure"
            required
            placeholder="Enter loan tenure in months"
            min="1"
          />
        </div>

        <button type="submit">Calculate EMI</button>
      </form>

      <% if (typeof result !== 'undefined') { %>
      <h2>Monthly EMI: ₹<%= result %></h2>
      <% } %>
    </div>

    <script>
      // JavaScript for Dynamic Bank Rate
      document.getElementById("bank").addEventListener("change", function () {
        var bank = this.value;
        var rateField = document.getElementById("rate");

        // Set rates based on bank selection
        if (bank === "bank1") {
          rateField.value = 8.5; // Example rate for HDFC Bank
        } else if (bank === "bank2") {
          rateField.value = 8.6; // Example rate for SBI
        } else if (bank === "bank3") {
          rateField.value = 8.4; // Example rate for ICICI Bank
        } else if (bank === "bank4") {
          rateField.value = 8.75; // Example rate for Axis Bank
        } else if (bank === "bank5") {
          rateField.value = 8.55; // Example rate for Bank of Baroda
        } else if (bank === "bank6") {
          rateField.value = 8.5; // Example rate for PNB
        } else if (bank === "bank7") {
          rateField.value = 8.6; // Example rate for Kotak Mahindra Bank
        } else if (bank === "bank8") {
          rateField.value = 8.2; // Example rate for Bajaj Finserv
        } else if (bank === "bank9") {
          rateField.value = 8.5; // Example rate for IDFC FIRST Bank
        } else if (bank === "bank10") {
          rateField.value = 8.65; // Example rate for Yes Bank
        } else {
          rateField.value = ""; // Clear rate if no bank is selected
        }
      });
    </script>
  </body>
</html>
