<script>
  // Add event listeners to buttons
  document.querySelector(".btn").addEventListener("click", () => {
    window.location.href = "/login_register"; // Redirect to the route for login_register.ejs
  });

  document.querySelector(".btn2").addEventListener("click", () => {
    window.location.href = "/login_register"; // Redirect to the same route
  });

  document
    .getElementById("subscribeForm")
    .addEventListener("submit", async (e) => {
      e.preventDefault();

      const email = e.target.email.value;

      try {
        const response = await fetch("/subscribe", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ email }),
        });

        const data = await response.json();

        if (response.status === 200) {
          showPopup("Subscription successful!");
        } else if (response.status === 401) {
          showPopup(data.message); // "Please log in first"
        }
      } catch (error) {
        console.error("Error:", error);
        showPopup("An error occurred. Please try again.");
      }
    });

  function showPopup(message) {
    const popup = document.getElementById("popupMessage");
    document.getElementById("popupText").innerText = message;
    popup.style.display = "block";
  }

  function closePopup() {
    const popup = document.getElementById("popupMessage");
    popup.style.display = "none";
  }
  document.querySelectorAll(".like img").forEach((img) => {
    img.addEventListener("click", function () {
      this.classList.toggle("red");
    });
  });

  // Toggle social media popup when clicking on any share icon
  document.querySelectorAll(".share-icon").forEach(function (shareIcon) {
    shareIcon.addEventListener("click", function (event) {
      const popup = this.nextElementSibling; // Get the next sibling element (popup div)

      // Hide all other popups first
      document
        .querySelectorAll(".social-popup")
        .forEach(function (popupElement) {
          if (popupElement !== popup) {
            popupElement.classList.remove("show");
          }
        });

      // Toggle the display of the clicked popup
      popup.classList.toggle("show");

      // Prevent the click from propagating to the document
      event.stopPropagation();
    });
  });

  // Close the popup if clicking outside of any share-box
  document.addEventListener("click", function (event) {
    const shareBoxes = document.querySelectorAll(".share-box");

    // Loop through each share-box and check if the clicked element is outside any of them
    shareBoxes.forEach(function (shareBox) {
      const popup = shareBox.querySelector(".social-popup");
      if (!shareBox.contains(event.target)) {
        popup.classList.remove("show"); // Hide the popup
      }
    });
  });
</script>
